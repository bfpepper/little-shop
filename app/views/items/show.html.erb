<div class="well container powerpuffgirl">
  <%= image_tag @item.image, class: "col-md-4" %>
  <div class=" col-md-8 ">
    <h1 class="well page-header blue"><%= @item.title %></h1>
    <p class="well blue"><%= @item.description %></p>
    <p><%= number_to_currency(@item.price) %></p>
  </div>

  <% if @item.retired %>
  Item Retired
  <% else %>
  <%= button_to "Add to Cart", cart_path(item_id: @item.id) %>
  <% end %>
</div>
