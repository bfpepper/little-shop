<h1>Your Cart</h1>

<ul id="cart-contents">
  <% @items.each do |item| %>
    <li>
      <%= image_tag item.image, width: 100 %> <%= item.title %> | $<%= item.price %> <%= item.description %>
      <%= button_to "Remove", cart_path(item_id: item.id), method: 'delete' %>
    </li>
  <% end %>
</ul>

Total: <%= number_to_currency(@cart.total) %>
<% if current_user %>
<%= button_to "Checkout"  %>
<% else %>
<%= link_to "Login or Create Account to Checkout", new_user_path %>
<% end %>
