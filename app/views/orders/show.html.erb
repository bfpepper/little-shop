<div class="page-header">
  <h1>Order <%= @order.id %> Details</h1>
</div>

<div class="well powerpuffgirl">
  <table class="table table-hover table-responsive">
    <tr>
      <td>
        <h4>Order Status:</h4>
      </td>
      <td>
        <%= @order.status %>
      </td>
    </tr>
    <tr>
      <td>
        <h4>Order Total:</h4>
      </td>
      <td>
        <%= number_to_currency(@order.price) %>
      </td>
    </tr>
    <tr>
      <td>
        <h4>Order submitted at:</h4>
      </td>
      <td>
        <%= @order.created_at %>
      </td>
    </tr>
  </table>
  <table class="table table-striped">
    <tr>
      <th><h4>Quantity</h4></th>
      <th><h4>Item</h4></th>
      <th><h4>Subtotal</h4></th>
    </tr>
    <% @order.contained_items.each do |item, quantity| %>
      <tr>
        <td><%= quantity %></td>
        <td><%= link_to item.title, item_path(item) %></td>
        <td><%= number_to_currency(item.price * quantity) %></td>
      </tr>
    <% end %>
  </table>
</div>
